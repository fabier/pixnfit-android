<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5">

    <ImageButton
        android:id="@+id/homeButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:background="@color/background_floating_material_light"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/home" />

    <ImageButton
        android:id="@+id/followersButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:background="@color/background_floating_material_light"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/followers" />

    <ImageButton
        android:id="@+id/cameraButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:background="@color/background_floating_material_light"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pix_blue" />

    <ImageButton
        android:id="@+id/inboxButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:background="@color/background_floating_material_light"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/inbox" />

    <ImageButton
        android:id="@+id/profileButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:background="@color/background_floating_material_light"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profile" />
</LinearLayout>