<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WizardPageContainer"
    android:orientation="vertical">

    <TextView style="@style/WizardPageTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/WizardFormLabel"
                android:text="@string/label_bodytype" />

            <RadioGroup
                android:id="@+id/bodyTypeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <RadioButton
                    android:id="@+id/bodytype_1_radioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/bodytype_male_1"
                    android:drawableTop="@drawable/bodytype_female_1" />

                <RadioButton
                    android:id="@+id/bodytype_2_radioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/bodytype_male_2"
                    android:drawableTop="@drawable/bodytype_female_2" />

                <RadioButton
                    android:id="@+id/bodytype_3_radioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/bodytype_male_3"
                    android:drawableTop="@drawable/bodytype_female_3" />

                <RadioButton
                    android:id="@+id/bodytype_4_radioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/bodytype_male_4"
                    android:drawableTop="@drawable/bodytype_female_4" />

                <RadioButton
                    android:id="@+id/bodytype_5_radioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/bodytype_male_5"
                    android:drawableTop="@drawable/bodytype_female_5" />

                <RadioButton
                    android:id="@+id/bodytype_6_radioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/bodytype_male_6"
                    android:drawableTop="@drawable/bodytype_female_6" />

            </RadioGroup>

        </LinearLayout>
    </ScrollView>
</LinearLayout>